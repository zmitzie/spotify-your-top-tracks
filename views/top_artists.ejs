<%- include('includes/head.ejs') %>
<div class="container">
  <h3 style="text-align:center">Your top artists in the last 6 months</h3>
  <br>
  <table class="table table-hover">
    <thead class="thead-light">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Followers</th>
      </tr>
    </thead>
    <tbody>
      <% artists.items.forEach(function (value, i) { %>
      <tr>
        <th scope="row"><%= i + 1 %></th>
        <td><a href="<%= value.external_urls.spotify %>" target="_blank"><%= value.name%></a></td>
        <td><%= value.followers.total%></td>
        <% }) %>
    </tbody>
  </table>
</div>
<%- include('includes/end.ejs') %>